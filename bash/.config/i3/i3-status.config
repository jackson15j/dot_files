# https://i3wm.org/docs/i3status.html
general {
        colors = true
        interval = 5
}

order += "read_file DUNST"
order += "read_file ORG"
order += "read_file SPOTIFYD"
# order += "read_file BRIGHTNESS"
order += "volume master"
order += "cpu_temperature 0"
order += "cpu_usage"
order += "load"
order += "memory"
order += "disk /"
order += "disk /mnt/spare"
# order += "run_watch DHCP"
# order += "run_watch VPNC"
# order += "path_exists VPN"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"
order += "tztime local"


read_file DUNST {
        format = "Dunst %content"
        format_bad = "Dunst: Do Not Disturb"
        path = "/tmp/i3/status/dunst"
}

read_file ORG {
        format = "ORG %content"
        path = "/tmp/i3/status/todo_org"
}

read_file SPOTIFYD {
        format = "%content"
        path = "/tmp/i3/status/spotifyd"
}

volume master {
        format = "VOL %volume"
        format_muted = "VOL muted"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

read_file BRIGHTNESS {
        format = "BRI %content%"
        path = "~/.config/brightness"
        max_characters = 5
}

cpu_temperature 0 {
        format = "T: %degreesÂ°C"
        path = "/sys/devices/platform/dell_smm_hwmon/hwmon/hwmon5/temp1_input"
}

cpu_usage {
        format= "CPU %usage <%cpu0 %cpu1>"
        max_threshold= 75
}

run_watch DHCP {
        pidfile = "/var/run/dhclient*.pid"
}

run_watch VPNC {
        # file containing the PID of a vpnc process
        pidfile = "/var/run/vpnc/pid"
}

path_exists VPN {
        # path exists when a VPN tunnel launched by nmcli/nm-applet is active
        path = "/proc/sys/net/ipv4/conf/tun0"
}

wireless _first_ {
        format_up = "W (%quality at %essid, %bitrate) %ip"
        format_down = ""
}

ethernet _first_ {
        format_up = "E %ip (%speed)"
        format_down = ""
}

battery all {
        format = "%status %percentage %remaining %emptytime"
        format_down = "No battery"
        status_chr = "âš¡ CHR"
        status_bat = "ðŸ”‹ BAT"
        status_unk = "? UNK"
        status_full = "â˜» FULL"
        path = "/sys/class/power_supply/BAT%d/uevent"
        low_threshold = 10
}

tztime local {
        format = "%Y-%m-%d %H:%M"
}

load {
        format = "%1min %5min %15min"
}

memory {
        format = "MEM %percentage_used"
        threshold_degraded = "10%"
        format_degraded = "MEMORY: %free"
}

disk "/" {
        format = "HDD %avail (%total)"
}

disk "/mnt/spare" {
        format = "HDD2 %avail (%total)"
}